<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/authorIcon"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/default_profile_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postAuthor"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginStart="-7dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/authorIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/postImageLeft"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:src="@drawable/purple_left_arrow"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@+id/postImage"
        app:layout_constraintBottom_toBottomOf="@id/postImage"
        app:layout_constraintStart_toStartOf="@id/postImage"/>

    <ImageButton
        android:id="@+id/postImageRight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/black"
        android:src="@drawable/purple_right_arrow"
        android:elevation="2dp"
        android:scaleType="fitCenter"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@+id/postImage"
        app:layout_constraintBottom_toBottomOf="@id/postImage"
        app:layout_constraintEnd_toEndOf="@id/postImage"/>

    <ImageButton
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="-12dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/authorIcon"/>

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="283dp"
        android:layout_marginBottom="142dp"
        android:text="Likes"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postImage"/>

    <com.ms.square.android.expandabletextview.ExpandableTextView
        android:id="@+id/postDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        app:collapseDrawable="@drawable/purple_up_arrow"
        app:expandDrawable="@drawable/purple_down_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/likes"
        app:maxCollapsedLines="2">

        <TextView
            android:id="@id/expandable_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@id/expand_collapse"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_gravity="end|bottom"
            android:scaleType="centerCrop"
            android:background="@null"/>
    </com.ms.square.android.expandabletextview.ExpandableTextView>

    <Button
        android:id="@+id/viewCommentsButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:gravity="start|center_vertical"
        android:textColor="#808080"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>
